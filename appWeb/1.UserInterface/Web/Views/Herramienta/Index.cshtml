@model List<appWeb._3.Dominio.Entidad.Herramienta>
@{
    ViewBag.Title = "Listado de Herramientas";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h3 class="card-title mb-0">
                        <i class="fas fa-tools"></i> Mantenimiento de Herramientas
                    </h3>
                </div>
                <div class="card-body">
                    @if (ViewBag.Error != null)
                    {
                        <div class="alert alert-danger">
                            <i class="fas fa-exclamation-triangle"></i> @ViewBag.Error
                        </div>
                    }

                    <div class="mb-3">
                        @Html.ActionLink("Agregar Nueva Herramienta", "Agregar", null, new { @class = "btn btn-success" })
                    </div>

                    @if (Model != null && Model.Count > 0)
                    {
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead class="table-dark">
                                    <tr>
                                        <th>ID Herramienta</th>
                                        <th>Descripción</th>
                                        <th>Medida</th>
                                        <th>Categoría</th>
                                        <th>Precio Unitario</th>
                                        <th>Stock</th>
                                        <th>Acciones</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@item.idHer</td>
                                            <td>@item.desHer</td>
                                            <td>@item.medHer</td>
                                            <td>@item.Nombrecategoria</td>
                                            <td>S/. @item.preUni.ToString("F2")</td>
                                            <td>
                                                @if (item.stock <= 5)
                                                {
                                                    <span class="badge bg-danger">@item.stock</span>
                                                }
                                                else if (item.stock <= 10)
                                                {
                                                    <span class="badge bg-warning">@item.stock</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-success">@item.stock</span>
                                                }
                                            </td>
                                            <td>
                                                @Html.ActionLink("Editar", "Editar", new { id = item.idHer }, new { @class = "btn btn-primary btn-sm" })
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-info">
                            <i class="fas fa-info-circle"></i> No hay herramientas registradas.
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Inicializar tooltips si es necesario
            $('[data-toggle="tooltip"]').tooltip();
        });
    </script>
}